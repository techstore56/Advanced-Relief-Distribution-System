<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="VerticalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="MaterialTheme.TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorGrey</item>
        <item name="android:colorBackgroundCacheHint">@color/colorPink</item>
    </style>

</resources>
